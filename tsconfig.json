{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["ES2019", "ES2018", "ES2017", "ES2016", "dom"]
  },
  "exclude": ["node_modules", "dist", "__test__", "**/*.spec.ts"]
}
