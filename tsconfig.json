{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["es7", "dom"]
  },
  "exclude": ["node_modules", "dist", "__test__", "**/*.spec.ts"]
}
